<div class="cool">
  <h1>Create new Article</h1>

  <div class="cool">
    <%= form_for(@article) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <%= f.submit class: 'button' %>
      <%end%>
  </div>
</div>
